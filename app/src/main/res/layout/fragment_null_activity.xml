<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_null_activity"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="16dp"
    android:layout_gravity="center"
    android:background="?attr/color_dynamic0"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_null_guideline_horizontal"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"/>

    <LinearLayout
        app:layout_constraintStart_toStartOf="@id/fragment_null_guideline_horizontal"
        app:layout_constraintEnd_toEndOf="@id/fragment_null_guideline_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fragment_null_text_0"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:text="@string/fragment_null_activity_text_0"
            android:fontFamily="sans-serif"
            android:textFontWeight="700"
            android:textSize="24sp"
            android:textColor="?attr/color_dynamic1"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/fragment_null_text_1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:text="@string/fragment_null_activity_text_1"
            android:fontFamily="sans-serif"
            android:textFontWeight="300"
            android:textSize="24sp"
            android:textColor="?attr/color_dynamic1"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>